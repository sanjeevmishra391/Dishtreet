<%- include("partials/header") -%>

<div class="container-fluid" style="margin-top: 60px;">
  <div class="row justify-content-center">
    <div class="col-md-6" style="overflow: hidden; padding: 0px;">
      <% if(locals.message) { %>
        <div class="row justify-content-center">
          <h5> <%= message %></h5>
        </div>
      <% } %>
      <img src="https://images.unsplash.com/photo-1550259114-ad7188f0a967?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MjV8fGZhc3QlMjBmb29kfGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=60" alt="">
    </div>
    <div class="col-md-6" style="padding: 0px;">
      <div class="col-lg-6 mx-auto" style="padding: 15px;">
        <h3>Create an account</h3>
        <p class="mb-5">Please create an account to continue using our service</p>
        <form action="/auth/signup" method="post">
          <div class="d-flex align-items-center mb-4">
            <div class="mr-3"><i class="fas fa-user"></i></div>
              <div class="w-100">
                <p class="mb-0  font-weight-bold text-dark">Full Name</p>
                <input type="text" class="form-control form-control-sm p-0 border-input border-0 rounded-0" placeholder="Enter Your Name" name="name">
              </div>
          </div>

          <div class="d-flex align-items-center mb-4">
            <div class="mr-3"><i class="fas fa-envelope"></i></div>
              <div class="w-100">
                <p class="mb-0  font-weight-bold text-dark">Email Address</p>
                <input type="email" class="form-control form-control-sm p-0 border-input border-0 rounded-0" placeholder="Enter Your Email" name="email">
              </div>
          </div>

          <div class="d-flex align-items-center mb-4">
            <div class="mr-3"><i class="fas fa-key"></i></div>
            <div class="w-100">
                <p class="mb-0 font-weight-bold text-dark">Password</p>
                <input type="password" class="form-control form-control-sm p-0 border-input border-0 rounded-0" placeholder="Enter Password" name="password">
            </div>
          </div>

          <div class="d-flex align-items-center mb-4">
            <div class="mr-3"><i class="fas fa-phone"></i></div>
              <div class="w-100">
                <p class="mb-0  font-weight-bold text-dark">Contact Number</p>
                <input type="text" class="form-control form-control-sm p-0 border-input border-0 rounded-0" placeholder="Enter Your Contact Number" name="mobile">
              </div>
          </div>

          <div class="mb-3">
            <button class="btn btn-primary btn-block mb-3" type="submit">CREATE AN ACCOUNT</button>
            <p class="text-center">Already have an account? <a href="/login" class="text-danger text-decoration-none">Sign in</a></p>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>



<%- include("partials/footer") -%>
