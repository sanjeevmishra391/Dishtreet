<%- include("partials/header") -%>

<!-- content -->
<div class="content-2">

  <div class="profile-div">
    <div class="black-back mt-5">
      <div class="container pt-5 px-5">
        <div class="media align-items-end profile-head">
          <div class="profile mr-2">
            <img src="https://images.unsplash.com/photo-1517821362941-f7f753200fef?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MjF8fHN0cmVldCUyMHZlbmRvcnxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=60" alt="..." width="180" class="rounded mb-2 img-thumbnail">
          </div>
          <div class="media-body mb-5 ml-2 text-white">
            <h4 class="mt-0 mb-0" style="display: inline;"><%= ven.name %></h4>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="about-div container mt-5">
    <h3>About</h3>
    <div class="white-back row p-2">
      <div class="col-sm-6 p-2">
        <p class="font-weight-bold"><i class="fas fa-user"></i>  OWNER</p>
        <h6 class="text-muted"><%= ven.owner %></h6>
      </div>
      <div class="col-sm-6 p-2">
        <p class="font-weight-bold"><i class="fas fa-phone"></i>  PHONE</p>
        <h6 class="text-muted"><%= ven.mobile %></h6>
      </div>
      <div class="col-sm-6 p-2">
        <p class="font-weight-bold"><i class="fas fa-clock"></i>  START TIME</p>
        <h6 class="text-muted"><%= ven.start_time %></h6>
      </div>
      <div class="col-sm-6 p-2">
        <p class="font-weight-bold"><i class="fas fa-clock"></i>  CLOSING TIME</p>
        <h6 class="text-muted"><%= ven.end_time %></h6>
      </div>
      <div class="col-sm-12 p-2">
        <p class="font-weight-bold"><i class="fas fa-street-view"></i>  ADDRESS</p>
        <h6 class="text-muted"><%= ven.add.streetname %>, <%= ven.add.city %>, <%= ven.add.state %>, <%= ven.add.zipcode %></h6>
      </div>
    </div>
  </div>

  <div class="dishes-div container mt-5">
    <h3>Dishes</h3>
    <div class="white-back row p-2">
      <div class="row justify-content-around">
        <% for(let vd of ven.dishList) { %>
          <div class="col-lg-3 col-sm-6 card">
            <div>
              <img class="card-img-top" src="https://images.pexels.com/photos/2983101/pexels-photo-2983101.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= vd.name %></h5>
                <img class="veg" src="https://upload.wikimedia.org/wikipedia/commons/thumb/7/78/Indian-vegetarian-mark.svg/233px-Indian-vegetarian-mark.svg.png" alt="">
                <p class="card-text price">Rs. <%= vd.price %></p>
                <button class="btn btn-dark btn-block add-cart" type="button" name="button"  onClick="addToCart(<%= vd.dish_ID %>)">Add to cart</button>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <div class="reviews-div container my-5">
    <h3>Reviews</h3>
    <div class="white-back row p-2">
      <div class="container vendor-review">

        <!-- <div class="avg-rating row avg-rate">
          <div class="col-sm-6">
            <div class="rating-block">
              <h5 class="text-left">Average user rating</h5>
              <h3 class="bold padding-bottom-7">4.3 <small>/ 5</small></h3>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="far fa-star"></i>
            </div>
          </div>
        </div>
        <hr/> -->

        <div class="see-reviews row reviews mt-2">
          <div class="col-sm-12">
            <div class="review-block">
              <% for(let vr of ven.reviews) { %>
              <div class="row">
                <div class="col-sm-3">
                  <img src="http://dummyimage.com/60x60/666/ffffff&text=No+Image" class="img-rounded">
                  <div class="review-block-name"><a href="#"><%= vr.name %></a></div>
                </div>
                <div class="col-sm-9">
                  <div class="review-block-rate">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="far fa-star"></i>
                  </div>
                  <div class="review-block-description"><%= vr.rating %> Stars, <%= vr.comment %></div>
                </div>
              </div>
              <hr/>
              <% } %>
            </div>
          </div>
        </div>

        <div class="post-review row mb-4">
          <div class="col-sm-12">
              <form class="row" action="/vendors/review" method="POST">
                <div class="col-sm-12">
                  <h3>Give rating</h3>
                    <select class="custom-select" name="stars">
                      <option selected>Select number of start...</option>
                      <option value="1">One</option>
                      <option value="2">Two</option>
                      <option value="3">Three</option>
                      <option value="4">Four</option>
                      <option value="5">Five</option>
                    </select>
                </div>
                <div class="col-sm-12">
                  <h3>Leave a comment</h3>
                  <textarea class="col-sm-12" name="comment" rows="4" placeholder="Write your comment here."></textarea>
                  <br>
                  <div class="mt-3 col-sm-12 d-flex justify-content-end p-0">
                    <button class="btn btn-dark col-sm-3" type="submit" name="button">Post</button>
                  </div>
                </div>
              </form>
          </div>
        </div>

      </div>
    </div>
  </div>

</div>

<%- include("partials/footer") -%>
