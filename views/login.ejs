<%- include("partials/header") -%>

<div class="container-fluid" style="margin-top: 60px;">
  <div class="row justify-content-center">
    <div class="col-md-6" style="overflow: hidden; padding: 0px;">
      <% if(locals.message) { %>
        <div class="row justify-content-center">
          <h5> <%= message %></h5>
        </div>
      <% } %>
      <img src="https://images.unsplash.com/photo-1550259114-ad7188f0a967?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MjV8fGZhc3QlMjBmb29kfGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=60" alt="">
    </div>
    <div class="col-md-6 my-auto" style="padding: 0px;">
      <div class="col-lg-6 mx-auto">
        <h3>Welcome</h3>
        <p class="mb-5">Sign in to your account to continue</p>
        <form action="/auth/login" method="post">
          <div class="d-flex align-items-center mb-4">
            <div class="mr-3"><i class="fas fa-envelope"></i></div>
              <div class="w-100">
                <p class="mb-0  font-weight-bold text-dark">Email Address</p>
                <input type="email" class="form-control form-control-sm p-0 border-input border-0 rounded-0" placeholder="Enter Your Email" name="email" required>
              </div>
          </div>

          <div class="d-flex align-items-center mb-4">
            <div class="mr-3"><i class="fas fa-key"></i></div>
            <div class="w-100">
                <p class="mb-0 font-weight-bold text-dark">Password</p>
                <input type="password" class="form-control form-control-sm p-0 border-input border-0 rounded-0" placeholder="Enter Password" name="password" required>
            </div>
          </div>
            <div class="mb-3">
              <button class="btn btn-primary btn-block mb-3" type="submit">Log In</button>
              <a href="/signup" class="btn btn-light btn-block mb-2">Create an account</a>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer") -%>
